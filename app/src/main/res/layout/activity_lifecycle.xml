<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="ru.surfstudio.summerschool.MainActivity">

    <Button
        android:id="@+id/btn_default_lifecycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Без обработки ЖЦ"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_fixed_lifecycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="С сохранением данных"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_view_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ViewModel"
        app:layout_constraintEnd_toEndOf="parent" />

</LinearLayout>